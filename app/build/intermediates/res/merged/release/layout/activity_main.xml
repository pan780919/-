    xmlns:ads="http://schemas.android.com/apk/res-auto"

    tools:context="com.jhengweipan.SevenPeopleBook.WhoActivity">
    <ListView
        android:id="@+id/who_Listview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
